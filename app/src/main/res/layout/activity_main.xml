<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <RelativeLayout
        android:id="@+id/topPanel"
        style="@style/TitleBarStyle">
        <ImageView
            android:id="@+id/back"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/nav_btn_back_nor" />

        <TextView
            style="@style/BaseTextStyle"
            android:layout_centerInParent="true"
            android:text="个人信息"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/topPanel"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--注册地址-->
        <RelativeLayout
            style="@style/RelativeLayoutItemStyle"
            android:background="@drawable/light_bottom_line">

            <TextView

                android:id="@+id/register_adr_text"
                style="@style/BaseTextStyle"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                android:text="注册地址" />

            <TextView
                android:layout_toRightOf="@+id/register_adr_text"
                android:layout_toLeftOf="@+id/register_edit"
                android:id="@+id/register_address"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                tools:text="税辅导辅导你是否记税是否记税辅导辅导你是否记税辅导辅导你是否记税辅导辅导你是否记税辅导辅导你是否记税辅导辅导你是否记" />
            <ImageView
                android:clickable="true"
                android:id="@+id/register_edit"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:src="@mipmap/nav_right_arrow" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
